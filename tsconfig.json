{
  "compilerOptions": {
    "outDir": "./dist", // Compiled output directory
    "rootDir": "./src", // Source code directory
    "module": "esnext", // Use ESNext for module output
    "target": "es6", // Compile to ES6
    "moduleResolution": "node", // Node-style module resolution
    "esModuleInterop": true, // Interop for ES modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src", // Base directory for module resolution
    "paths": {
      "*": ["*"] // Ensure all paths are mapped correctly
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
